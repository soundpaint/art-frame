ROOT=..

include ../defs.mk

MY_SRC_FILES = $(wildcard *.html)
MY_OBJ_FILES = $(patsubst %.html,$(BUILD_SRC)/%.h,$(MY_SRC_FILES))

all: $(MY_OBJ_FILES)

$(BUILD_SRC):
	mkdir -p $@

$(BUILD_SRC)/%.h: %.html | $(BUILD_SRC)
	xxd -i $< > $@

objclean:
	rm -f $(MY_OBJ_FILES)

bkpclean:
	rm -f *~

coreclean:
	rm -f core core.* vgcore.*

clean: objclean

